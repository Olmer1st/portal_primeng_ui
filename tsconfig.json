{
    "compilerOptions": {
        "outDir": "build/app",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "es2016",
            "scripthost"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules"
    ]
}
